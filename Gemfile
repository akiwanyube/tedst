source 'https://rubygems.org'

gem 'rails', '~> 6.1.0'

gem 'pg', '< 1.2' # PostgreSQL database adapter
# gem 'mysql2', '>= 0.4.4' # MySQL database adapter
# gem 'sqlite3', '~> 1.4' # SQLite database adapter (optional)

group :development, :test do
  gem 'byebug'
  gem 'rspec-rails'
end

group :test do
  gem 'capybara'
  gem 'factory_bot_rails'
  gem 'database_cleaner'
end

# Other common gems

gem 'dotenv-rails' # For managing environment variables

gem 'puma' # Web server

gem 'sass-rails' # Stylesheets

gem 'webpacker' # For JavaScript bundling

gem 'jbuilder' # JSON API

gem 'bootsnap', require: false # Speed up boot time